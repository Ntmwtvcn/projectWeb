<%- include("partials/header") %>
<body class="register">
    <div class="w3-display-topleft">
      <div class="middle">
        <div class="sm-container">
          <i class="show-btn fas fa-angle-double-down"></i>
          <div class="sm-menu">
            <a href="/aboutus"><i class="fas fa-address-book"></i></a>
            <a href="/explore"><i class="fas fa-book"></i></i></a>
            <a href="/"><i class="fas fa-sign-out-alt"></i></a>
          </div>
        </div>
      </div>
      <a style="padding-left: 60%;" href="/">
        <img id="logo" src="/image/logo.png"  width="100" height="100">
      </a> 
    </div>
  
      <script>
        $(".show-btn").click(function(){
          $(".sm-menu").fadeToggle("fast");
        });
      </script>







    <div class="signup-form">
        <form class="" action="/signup" method="POST">
          <h1>REGISTER</h1>
          <input type="text" name="firstName" placeholder="Firstname" class="retxtb">
          <input type="text" name="lastName" placeholder="Lastname" class="retxtb">
          <input type="text" name="username" placeholder="Username" class="retxtb">
          <input type="password" name="password" id="p" placeholder="Password" class="retxtb">
          <input type="password" name="Cpassword" id="Cp" placeholder="Confirm password" class="retxtb">
          <div class='container' style="text-align: center;" id="divCheckPasswordMatch">
                    
          </div>
          <div class='container' style="text-align: center;">
            <% if (error && error.length > 0) { %>
              <div class="alert alert-danger" role="alert">
                <%= error %>
              </div>
            <% } %>
            <% if (success && success.length > 0) { %>
              <div class="alert alert-success" role="alert">
                <%= success %>
              </div>
            <% } %>
          </div>
          <input id="b" type="submit" value="Create Account" class="signup-btn">
          <a href="/">Already Have one ?</a>
        </form>
      </div>

<%- include("partials/footer") %>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
  $(document).ready(function () {
      $("#Cp").keyup(function(){
        var password = $("#p").val();
        var confirmPassword = $("#Cp").val();
        if (password != confirmPassword){
          $("#b").attr("disabled",true);
          $("#divCheckPasswordMatch").html('<div class="alert alert-danger" role="alert">Passwords do not match!</div>');
        } else {
          $("#b").attr("disabled",false);
          $("#divCheckPasswordMatch").html('<div class="alert alert-success" role="alert">Passwords match.</div>');
        }
      });
  });
</script>